<hr/>

<table>

    <tr>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
    </tr>

    @foreach (var city in cities)
    {
        <tr>
            <td> @city.name </td>
            <td> @city.state </td>
            <td> @city.country </td>
        </tr>
    }

</table>

<hr/>

<label>
    Search:
    <InputText @bind-Value="search" />
</label>

<button class="btn btn-primary" @onclick="Search">Search</button>

